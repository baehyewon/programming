                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/aaf_edt_message"
                        android:layout_marginLeft="5dp"
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:hint="금일 중 업무 보고 드리겠습니다."
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/aaf_btn_message"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/if_mail_1055030"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/feedback">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:text="feedback"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/aaf_edt_like"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:gravity="top|left|center_vertical"
                    android:hint="내용을 작성해주세요"
                    android:textColor="#b2936f"
                    android:textColorHint="#b5ab9f"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="진행단계"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/aaf_edt_will_give_gift_2"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:gravity="left|center_vertical"
                    android:hint="진행단계 입력">

                </EditText>

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="완료"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/aaf_chk_finish_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="마감일"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/spinner">

                    <DatePicker
                        android:id="@+id/aaf_date_birthday_2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="알람(날짜)"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/spinner">

                    <DatePicker
                        android:id="@+id/aaf_date_alarm_2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="알람(시간)"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/spinner">

                    <TimePicker
                        android:id="@+id/aaf_time_alarm_2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:calendarViewShown="false"
                        android:timePickerMode="spinner"></TimePicker>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="결재자"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/aaf_edt_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:gravity="left|bottom"
                    android:hint="이름"></EditText>

                <EditText
                    android:id="@+id/aaf_edt_phone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="5"
                    android:gravity="left|bottom"
                    android:hint="연락처 입력"
                    android:inputType="number"
                    android:textSize="15sp"></EditText>

                <Button
                    android:id="@+id/aaf_btn_call_2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="연락처찾기"
                    android:background="#d1d1d1"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text="메시지"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/aaf_edt_message_2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:hint="금일 중 업무 보고 드리겠습니다."
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/aaf_btn_message_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/if_mail_1055030"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/feedback">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:text="feedback"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <EditText
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/aaf_edt_like_2"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:gravity="top|left|center_vertical"
                    android:hint="내용을 작성해주세요"
                    android:textColor="#b2936f"
                    android:textColorHint="#b5ab9f"
                    android:textSize="15sp" />
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <Button
                    android:id="@+id/aaf_btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#f3877e"
                    android:text="추가" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        >

             <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="추가"
            />

    </LinearLayout>

</LinearLayout>
